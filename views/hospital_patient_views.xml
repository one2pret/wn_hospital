<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View hospital.patient View Tree -->
    <record id="view_hospital_patient_tree" model="ir.ui.view">
        <field name="name">view.hospital.patient.tree</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <tree string="Hospital Patient">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!-- View hospital.patient form -->
    <record id="view_hospital_patient_form" model="ir.ui.view">
        <field name="name">view.hospital.patient.form</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <form string="Hospital Patient">
                <header></header>
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Name..."/>
                        </h1>
                    </div>
                    <group>
                        <group>
                        </group>
                        <group>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- View hospital.patient search -->
    <record id="view_hospital_patient_search" model="ir.ui.view">
        <field name="name">view.hospital.patient.search</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <search string="Hospital Patient">
                <group expand="1" string="Group By">
                    <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action hospital.patient -->
    <record id="action_hospital_patient" model="ir.actions.act_window">
        <field name="name">Hospital Patient</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.patient</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no examples click here to add new Hospital Patient.
            </p>
        </field>
    </record>

</odoo>
